{
  "compilerOptions": {
      "esModuleInterop": true,
      "module": "es6",
      "target": "es6",
      "noImplicitAny": true,
      "rootDir": "src",
      "allowJs": true,
      "moduleResolution": "node",
      "lib": [
          "es2020"
      ],
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*",
      "runtime",
      "resources",
      "index.d.ts"
  ]
}